<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=title[id]%></title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="wrap">
        用户名:<input type="text" name="user" id="user"><br/>
        密<span>密</span>码:<input type="password" name="pwd" id="pwd"><br/>
        <button id="rBtn">注册</button>
    </div>
    <script src="js/jquery.js"></script>
    <script>
        $('#rBtn').on('click', function () {
            const user = $.trim($('#user').val());
            const pwd = $.trim($('#pwd').val());
            if (user !== '' && pwd !== '') {
                $.ajax({
                    url: '/registered',
                    type: 'post',
                    data: {user: user, pwd: pwd},
                    success: function (data) {
                        alert(data.msg);
                        if (data.code === 0) {
                            location.href = '/login';
                        } else if (data.code === 1) {
                            $('#user').val('');
                            $('#pwd').val('');
                        };
                    }
                });
            };
        });
    </script>
</body>
</html>